{
    "name": "microphork/tests",
    "description": "Unit tests for the microphork framework",
    "keywords": ["microphork", "phork", "framework"],
    "require": {
        "microphork/framework": "*",
        "microphork/package-auth": "*",
        "microphork/package-debug": "*",
        "phpunit/phpunit": "4.0.*"
    },
    "require-dev": {
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Phork\\Test\\": "tests/mocks/classes"
        }
    },
    "minimum-stability": "dev"
}